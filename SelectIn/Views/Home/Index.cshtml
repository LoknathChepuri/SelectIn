@{
    ViewData["Title"] = "Saree Select – Home Selection Platform";
}
<div class="container my-4 mt-5 bg-white bg-gradient-shop rounded-4 shadow-lg p-3 p-md-4" style="max-width:1200px;">
    <h1 class="display-5 fw-bold text-center mb-3" style="color:#7b4397; letter-spacing:1px;">Saree Select</h1>
    <p class="lead text-center mb-4" style="color:#4b006e;">Select up to 10 sarees online and request a <b>Home Selection</b> in Hyderabad!</p>
    <div id="category-buttons" class="mb-4 text-center"></div>
    <section class="mb-5">
        <h2 id="category-title" class="h4 mb-4 text-center"></h2>
        <div id="product-grid" class="row row-cols-2 row-cols-md-4 g-4 justify-content-center"></div>
        <nav id="pagination-nav" class="mt-4"></nav>
    </section>
</div>
<!-- Modal for product gallery -->
<div class="modal fade" id="productModal" tabindex="-1" aria-labelledby="productModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="productModalLabel"></h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div id="modal-carousel" class="carousel slide" data-bs-ride="carousel">
                    <div class="carousel-inner" id="modal-carousel-inner"></div>
                    <button class="carousel-control-prev" type="button" data-bs-target="#modal-carousel" data-bs-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Previous</span>
                    </button>
                    <button class="carousel-control-next" type="button" data-bs-target="#modal-carousel" data-bs-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Next</span>
                    </button>
                </div>
            </div>
            <div class="modal-footer">
                <div class="fw-semibold text-success" id="modal-price"></div>
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>
